@using netcore4.Models
@model User

<body>
    <form asp-action="Create" asp-controller="Home" method="post">
        <span asp-validation-for="FirstName" style="color:red;"></span><br>
        <label asp-for="FirstName">First Name:
        <input asp-for="FirstName"></label><br>

        <span asp-validation-for="LastName" style="color:red;"></span><br>
        <label asp-for="LastName">Last Name:
        <input asp-for="LastName"></label><br>

        <span asp-validation-for="Age" style="color:red;"></span><br>
        <label asp-for="Age">Age:
        <input asp-for="Age"></label><br>
        
        <span asp-validation-for="Email" style="color:red;"></span><br>
        <label asp-for="Email">Email:
        <input asp-for="Email"></label><br>

        <span asp-validation-for="Password" style="color:red;"></span><br>
        <label asp-for="Password">Password:
        <input asp-for="Password"></label><br>

        <input value="Add User" type="submit">
    </form>
</body>
